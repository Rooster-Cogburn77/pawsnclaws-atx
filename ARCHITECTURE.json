{
  "name": "PawsNClaws ATX",
  "type": "nonprofit_platform",
  "description": "501(c)(3) nonprofit platform helping Austin's animals through community coordination, donations, and volunteer management",

  "tech_stack": {
    "backend": "FastAPI",
    "database": "Supabase (PostgreSQL)",
    "auth": "Supabase Auth",
    "payments": "Stripe",
    "email": "SendGrid",
    "sms": "Twilio",
    "storage": "Supabase Storage",
    "frontend": "Next.js (future)"
  },

  "domains": [
    {
      "name": "animals",
      "description": "Animal profiles, colonies, and tracking",
      "priority": 1,
      "tables": ["animals", "colonies", "animal_photos", "medical_records"],
      "endpoints": ["/animals", "/animals/{id}", "/colonies", "/colonies/{id}"]
    },
    {
      "name": "volunteers",
      "description": "Volunteer coordination and tracking",
      "priority": 1,
      "tables": ["volunteers", "feeding_routes", "feeding_logs", "volunteer_shifts"],
      "endpoints": ["/volunteers", "/routes", "/routes/{id}/signup", "/feeding-log"]
    },
    {
      "name": "donations",
      "description": "Donation processing and sponsorships",
      "priority": 1,
      "tables": ["donations", "recurring_donations", "sponsorships", "donation_allocations"],
      "endpoints": ["/donations", "/donations/recurring", "/sponsorships", "/donations/receipt/{id}"]
    },
    {
      "name": "fosters",
      "description": "Foster family network",
      "priority": 2,
      "tables": ["foster_families", "foster_placements", "foster_applications"],
      "endpoints": ["/fosters", "/fosters/apply", "/fosters/{id}/animals"]
    },
    {
      "name": "events",
      "description": "Event management and registration",
      "priority": 2,
      "tables": ["events", "event_registrations", "event_tickets"],
      "endpoints": ["/events", "/events/{id}", "/events/{id}/register"]
    },
    {
      "name": "resources",
      "description": "Community resource directory",
      "priority": 2,
      "tables": ["resources", "lost_found"],
      "endpoints": ["/resources", "/lost-found"]
    },
    {
      "name": "impact",
      "description": "Impact tracking and transparency",
      "priority": 3,
      "tables": ["impact_metrics", "expense_reports"],
      "endpoints": ["/impact", "/impact/donations", "/impact/animals"]
    }
  ],

  "implementation_phases": [
    {
      "phase": 1,
      "name": "Foundation",
      "description": "Core infrastructure and auth",
      "tasks": [
        "Set up Supabase project and configure auth",
        "Create base database schema (users, animals, volunteers)",
        "Implement authentication endpoints",
        "Set up Row Level Security policies",
        "Create basic API structure with health checks"
      ]
    },
    {
      "phase": 2,
      "name": "Animal Management",
      "description": "Animal profiles and tracking",
      "tasks": [
        "Implement animal CRUD endpoints",
        "Add colony management",
        "Create animal photo upload with Supabase Storage",
        "Add medical record tracking",
        "Build public animal browsing"
      ]
    },
    {
      "phase": 3,
      "name": "Volunteer System",
      "description": "Volunteer coordination",
      "tasks": [
        "Implement volunteer profile management",
        "Create feeding route system",
        "Add route signup and scheduling",
        "Build feeding log check-in",
        "Add volunteer hours tracking"
      ]
    },
    {
      "phase": 4,
      "name": "Donations",
      "description": "Payment processing",
      "tasks": [
        "Integrate Stripe for one-time donations",
        "Add recurring donation subscriptions",
        "Implement sponsor-a-stray program",
        "Create donation receipt generation",
        "Build donation allocation tracking"
      ]
    },
    {
      "phase": 5,
      "name": "Events & Resources",
      "description": "Events and community resources",
      "tasks": [
        "Create event management system",
        "Add event registration",
        "Build resource directory",
        "Implement lost & found board",
        "Add notification system (email/SMS)"
      ]
    },
    {
      "phase": 6,
      "name": "Impact & Polish",
      "description": "Transparency and refinement",
      "tasks": [
        "Build impact dashboard",
        "Add expense tracking",
        "Create public transparency page",
        "Add admin dashboard",
        "Performance optimization and testing"
      ]
    }
  ]
}
